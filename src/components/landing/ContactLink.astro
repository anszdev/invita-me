---
import Arrow from "@assets/arrow.svg";

type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a
  href={href}
  class="flex justify-between items-center text-inv-secondary hover:text-inv-ui-accent group transition-colors ease-in-out duration-300 font-extrabold text-2xl md:text-8xl"
>
  <slot />
  <div class="md:basis-3/12 flex items-center justify-between">
    <span
      class="hidden md:block size-10 md:size-44 md:opacity-0 group-hover:opacity-100 transition-all ease-in-out duration-300 rotate-45 group-hover:rotate-0"
    >
      <slot name="icon" />
    </span>
    <span class="p-2 bg-inv-tertiary/50 rounded-full">
      <Arrow
        class="size-6 md:size-24 -rotate-45 group-hover:rotate-0 transition-transform duration-300 ease-in-out"
      />
    </span>
  </div>
</a>
