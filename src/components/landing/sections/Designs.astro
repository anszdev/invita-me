---
import Container from "@common/Container.astro";
import CardImage from "../CardImage.astro";
import { EVENT_CATEGORIES } from "@utils/staticData";
import Section from "./Section.astro";
import SectionTitle from "./SectionTitle.astro";
---

<Section id="designs">
  <Container>
    <SectionTitle>
      Elige Tu Próxima <span class="text-inv-primary font-black"
        >Celebración</span
      >:
    </SectionTitle>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-9 mt-8 md:mt-24">
      {
        EVENT_CATEGORIES.map((category) => (
          <CardImage {...category} href="#" textSize="text-4xl md:text-6xl" />
        ))
      }
    </div>
    <div class="mx-auto mt-12 md:mt-36 md:w-2xl text-center">
      <h5
        class="text-4xl md:text-8xl font-bold text-inv-primary drop-shadow-lg drop-shadow-inv-primary/40"
      >
        Proximamente...
      </h5>
      <p class="font-medium md:text-xl mt-2.5">
        ¡Esto es solo el comienzo! Pronto verás más eventos increíbles por aquí.
      </p>
    </div>
  </Container>
  <div class="absolute inset-0 -z-10 grid grid-cols-2">
    <div class="bg-[url('/src/assets/bg.svg')] grid-rows-2">
      <div
        class="from-transparent via-80% via-inv-bg-light to-inv-bg-light bg-radial h-full"
      >
      </div>
    </div>
  </div>
</Section>
