---
import Container from "@components/common/Container.astro";
import Section from "./Section.astro";
import Details from "../Details.astro";

import { FAQS } from "@utils/staticData";
import SectionTitle from "./SectionTitle.astro";
---

<Section id="faq">
  <Container>
    <SectionTitle align="text-center">Preguntas Frecuentes</SectionTitle>
    <div class="flex flex-col md:grid grid-cols-2 gap-4 md:gap-8 mt-8 md:mt-16">
      <div class="flex flex-col gap-4 md:gap-9">
        {
          FAQS.slice(0, 3).map(({ answer, question }) => (
            <Details title={question} content={answer} />
          ))
        }
      </div>
      <div class="flex flex-col gap-4 md:gap-9">
        {
          FAQS.slice(3, 7).map(({ answer, question }) => (
            <Details title={question} content={answer} />
          ))
        }
      </div>
    </div>
  </Container>
  <div
    class="absolute inset-0 -z-10 md:size-96 size-64 from-inv-primary/20 via-inv-primary/10 to-inv-primary/5 blur-3xl bg-radial top-32 left-16"
  >
  </div>
  <div
    class="absolute -z-10 size-64 md:size-96 from-inv-primary/20 via-inv-primary/10 to-inv-primary/5 blur-3xl bg-radial bottom-16 right-16"
  >
  </div>
</Section>
